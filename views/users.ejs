<% include partials/header1 %>
<title><%=user.username%></title>
<% include partials/header2 %>

<div class="user-container container my-5 text-center">
<h1 class="display-3"><%=user.username%></h1>
<div class="container">
  <div class="row mt-3">
    <div class="col-lg-12">
      <h4 class="mine-text-secondary">آخرین تور های ثبت شده توسط این کاربر</h4>
    </div>
  </div>
  <div class="row my-5">
    <% campgrounds.forEach(function(camp){%>
    <div class="tour col-md-4 col-sm-6 mb-3 d-block text-center">
      <figure class="figure shadow rounded mine-bg-secondary">
        <img src="<%=camp.image %>" class="figure-img img-fluid rounded" />
        <figcaption class="figure-caption text-light">
          <%= camp.name%>
        </figcaption>
        <a
          href="/campgrounds/<%=camp._id%>"
          class="btn mine-bg-primary text-light my-3"
          >اطلاعات بیشتر</a
        >
      </figure>
    </div>
    <% }); %>
  </div>
  <% include partials/footer %>
</div>
</div>
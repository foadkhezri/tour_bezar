<% include partials/header1 %>
<title><%blog.title%></title>
<% include partials/header2 %>
<div class="container text-center form-container">
<h1 class="my-5 mine-text-secondary">ویرایش : <%= blog.title %></h1>
<form action="/blog/<%=blog._id%>?_method=PUT" method="POST">
  <div class="form-group">
    <input type="text" class="form-control text-center" name="title" value="<%= blog.title%>" required>
  </div>
    <div class="form-group">
    <input type="text" class="form-control text-center" name="author" value="<%= blog.author%>" required>
  </div>
  <div class="form-group">
    <input type="text" class="form-control text-center" name="blogimage" value="<%=blog.image%>" required>
  </div>
    <div class="form-group">
    <textarea class="form-control text-center" rows="5"  name="blogbody" required><%=blog.body%></textarea>
  </div>
  <button type="submit" class="btn mine-bg-primary text-light px-5 my-2">ثبت</button>
</form>
<form action="/blog/<%=blog._id%>?_method=DELETE" method="POST">
  <button type="submit" class="btn btn-danger text-light px-5 my-2">حذف پست</button>
</form>
</div>
<%include partials/footer%>
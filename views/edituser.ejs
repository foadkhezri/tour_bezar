<% include partials/header1 %>
<title>ویرایش <%=user.username%></title>
<% include partials/header2 %>
<div class="container text-center form-container">
<h1 class="my-5 mine-text-secondary">ویرایش : <%= user.username %></h1>
<form action="/users/<%=user._id%>?_method=PUT" method="POST">
    <div class="form-group">
    <input type="email" class="form-control text-center" name="newemail" value="<%= user.email%>" required>
  </div>
  <div class="form-group">
    <input type="password" class="form-control text-center" name="newpassword" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="باید حداقل شامل یک عدد، یک حرف بزرگ، یک حرف کوچک و طول بزرگتر یا برابر 8 کاراکتر باشد" value="<%= user.password%>" required>
  </div>
  <button type="submit" class="btn mine-bg-primary text-light px-5 my-2">ثبت</button>
</form>
<form action="/users/<%=user._id%>?_method=DELETE" method="POST">
  <button type="submit" class="btn btn-danger text-light px-5 my-2">حذف حساب کاربری</button>
</form>
</div>
<%include partials/footer%>
<% include partials/header2 %>
<div class="container text-center form-container">
<h1 class="my-5 mine-text-secondary">پست جدید</h1>
<div class="form-content">
<form action="/blog" method="POST">
  <div class="form-group">
    <input type="text" class="form-control text-center" name="title" placeholder="موضوغ پست">
  </div>
    <div class="form-group">
    <input type="text" class="form-control text-center" name="author" placeholder="نویسنده">
  </div>
  <div class="form-group">
    <input type="text" class="form-control text-center" name="blogimage" placeholder="آدرس عکس">
  </div>
    <div class="form-group">
    <textarea class="form-control text-center" rows="5"  name="blogbody" placeholder="متن پست"></textarea>
  </div>
  <button type="submit" class="btn mine-bg-primary text-light px-5 my-2">ثبت</button>
</form>
</div>
</div>

<% include partials/header1 %>
<title><%tour.name%></title>
<% include partials/header2 %>
<div class="container text-center form-container">
<h1 class="my-5 mine-text-secondary">ویرایش : <%= tour.name %></h1>
<form action="/campgrounds/<%=tour._id%>?_method=PUT" method="POST">
  <div class="form-group">
    <input type="text" class="form-control text-center" name="name" value="<%= tour.name%>" required>
  </div>
  <div class="form-group">
    <input type="text" class="form-control text-center" name="tourimage" value="<%=tour.image%>" required>
  </div>
    <div class="form-group">
    <input type="number" min="1" class="form-control text-center" name="tourprice" value="<%=tour.price%>" required>
  </div>
    <div class="form-group">
    <textarea class="form-control text-center" rows="5"  name="tourdesc" required><%=tour.description%></textarea>
  </div>
  <button type="submit" class="btn mine-bg-primary text-light px-5 my-2">ثبت</button>
</form>
<form action="/campgrounds/<%=tour._id%>?_method=DELETE" method="POST">
  <button type="submit" class="btn btn-danger text-light px-5 my-2">حذف تور</button>
</form>
</div>
<%include partials/footer%>